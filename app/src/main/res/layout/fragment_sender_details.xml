<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender Details"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/PersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="Enter Name" />

            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/PersonMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:inputType="phone"
                android:padding="10dp"
                android:hint="Enter Mobile Number"/>
            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/PersonAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:hint="Enter Pickup Address"/>

            <Spinner
                android:layout_marginTop="8dp"
                android:id="@+id/spinnerCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                />
            <Spinner
                android:layout_marginTop="8dp"
                android:id="@+id/spinnerThana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                />
            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/pickupInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:hint="Pickup Instruction (Optional)"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>