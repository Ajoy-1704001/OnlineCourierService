<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="70dp"
        android:paddingBottom="120dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_amazon_100px_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textColor="@color/LogoYellow"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast Delivery and  Reliable Courier Service"
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/mobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="phone"
        android:drawablePadding="10dp"
        android:background="@drawable/phone_text_bg"
        android:layout_margin="40dp"
        android:hint="+88   Enter Mobile Number"
        android:drawableLeft="@drawable/icons8_bangladesh_48px"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/next"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/LogoYellow"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/next_prev_button"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_alignStart="@+id/next"
            android:layout_alignLeft="@+id/next"
            android:layout_alignEnd="@+id/next"
            android:layout_alignRight="@+id/next"
            android:layout_alignParentTop="true"
            android:layout_marginStart="98dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="211dp"
            android:layout_marginRight="211dp"
            android:indeterminateTint="@color/LogoYellow"
            android:visibility="gone" />
    </RelativeLayout>
    <Button
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/MainThemeColor"
        android:layout_marginTop="15dp"
        android:text="Become a Merchant"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:background="@drawable/become_merchant_bg"/>

</LinearLayout>