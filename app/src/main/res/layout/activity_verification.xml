<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="70dp"
                android:paddingBottom="120dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons8_amazon_100px_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"
                    android:textColor="@color/LogoYellow"
                    android:textStyle="bold"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Delivery and  Reliable Courier Service"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </LinearLayout>
            <EditText
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:inputType="numberPassword"
                android:background="@drawable/phone_text_bg"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Verification Number"
                android:drawableLeft="@drawable/ic_baseline_verified_user_24"/>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:indeterminate="true"
                android:visibility="invisible" />
            <Button
                android:id="@+id/next"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/LogoYellow"
                android:text="Verify Mobile Number"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/next_prev_button"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>